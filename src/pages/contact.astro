<style>
  .contact-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.25rem;
    margin-top: 1.5rem;
  }

  .contact-list {
    margin: 0.75rem 0 0;
    padding-left: 1.25rem;
  }

  .contact-note {
    color: var(--muted);
    font-size: 0.9rem;
    margin-left: 0.4rem;
  }

  .contact-muted {
    color: var(--muted);
    max-width: 75ch;
  }

  .contact-form {
    display: grid;
    gap: 0.9rem;
    margin-top: 1rem;
  }

  .contact-form label {
    display: grid;
    gap: 0.35rem;
    color: var(--fg);
    font-weight: 600;
  }

  .contact-form input,
  .contact-form textarea {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid var(--border);
    color: var(--fg);
    border-radius: 10px;
    padding: 0.65rem 0.75rem;
    font: inherit;
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    outline: 2px solid rgba(93, 169, 255, 0.35);
    outline-offset: 2px;
  }

  .contact-button {
    justify-self: start;
    background: rgba(93, 169, 255, 0.18);
    border: 1px solid rgba(93, 169, 255, 0.35);
    color: var(--fg);
    padding: 0.6rem 0.9rem;
    border-radius: 999px;
    cursor: pointer;
    transition: transform 0.15s ease, border-color 0.15s ease;
    font-weight: 650;
  }

  .contact-button:hover {
    transform: translateY(-1px);
    border-color: rgba(93, 169, 255, 0.6);
  }

  .back-link {
    margin-top: 2.5rem;
    font-weight: 600;
  }
.hp-field {
  position: absolute;
  left: -10000px;
  top: auto;
  width: 1px;
  height: 1px;
  overflow: hidden;
}

</style>